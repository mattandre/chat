<% provide(:title, "Sign up") %>
<h1>Sign up</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@client) do |form| %>
    	<%= form.fields_for :users do |user_form| %>

				<%= render 'shared/error_messages', object: user_form.object %>

	      <%= user_form.label :name %>
	      <%= user_form.text_field :name %>

	      <%= user_form.label :email %>
	      <%= user_form.text_field :email %>

	      <%= user_form.label :password %>
	      <%= user_form.password_field :password %>

	      <%= user_form.label :password_confirmation, "Confirmation" %>
	      <%= user_form.password_field :password_confirmation %>
			<% end %>
      <%= form.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>