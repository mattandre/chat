<% provide(:title, "Forgot Password") %>
<h1>Forgot Password</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag({controller: "users", action: "remind_password"}, method: "post",) do |f| %>

      <%= label_tag :email, "Email" %>
      <%= text_field_tag :email %>

      <%= submit_tag "Send Instructions", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
